<div class="container">
  <div class="col-xs">
    <nav class = "navbar navbar-default navbar-fixed-top">
      <div class = "container-fluid">
        <div class = "navbar-header">
          <button type = "button" class="navbar-toggle collapsed" data-toggle="collapse" data-target ="#gnavi">
            <span class = "sr-only">Couple Happiness</span>
            <span class = "icon-bar"></span>
            <span class = "icon-bar"></span>
            <span class = "icon-bar"></span>
          </button>
          <a class = "navbar-brand">Couple Happness</a>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class = "nav navbar-nav">
            <% if logged_in_professional? %>
              <li><%= link_to "ログアウト", destroy_professional_sessions_path(current_professional.id) %></li>
            <% else %>
              <li><%= link_to "プロアカウント作成", new_professional_path %></li>
            <% end %>
            <li><%= link_to "ユーザーページへ", new_session_path %></li>
          </ul>
        </div>
      </div>
    </nav>

    <body>
    <h2 class="title2">プロフェッショナルログイン</h2>
    <br><br>

    <% flash.each do |key,value|%>
      <%= content_tag(:div, value, class:"#{key}") %>
    <% end %>

    <%= form_with(scope: :session, url:create_professional_sessions_path, local:true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %><br>
      <%= f.label :password %>
      <%= f.password_field :password %><br><br>
      <%= f.submit "ログイン"%>
    <% end %>
    </body>

    <nav class="navbar navbar-default navbar-fixed-bottom">
      <footer>
        <div class="company">© Couple Happiness Corp. All RIGHTS RESERVED.</div>
      </footer>
    </nav>
  </div>
</div>