<div class="container">
  <div class="col-xs-1"></div>
  <div class="col-xs-10">
    <nav class = "navbar navbar-default">
      <div class = "container-fluid">
        <div class = "navbar-header">
          <button type = "button" class="navbar-toggle collapsed" data-toggle="collapse" data-target ="#gnavi">
            <span class = "sr-only">Couple Happiness</span>
            <span class = "icon-bar"></span>
            <span class = "icon-bar"></span>
            <span class = "icon-bar"></span>
          </button>
          <a class = "navbar-brand">Couple Happness</a>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class = "nav navbar-nav">
            <% if logged_in? %>
              <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete%></li>
            <% else %>
              <li><%= link_to "ユーザーアカウント作成", new_user_path %></li>
            <% end %>
              <li><%= link_to "プロページへ", new_professional_sessions_path %></li>
          </ul>
        </div>
      </div>
    </nav>

    <h2 class="title2">ユーザーログイン</h2>
    <br>

    <% flash.each do |key,value|%>
      <%= content_tag(:div, value, class:"#{key}") %>
    <% end %>

    <%= form_with(scope: :session, url:sessions_path, local:true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %><br>
      <%= f.label :password %>
      <%= f.password_field :password %><br><br>
      <%= f.submit "ログイン"%>
    <% end %>
    <br><br>

    <footer>
      <div class="company">© Couple Happiness Corp. All RIGHTS RESERVED.</div>
    </footer>

  </div>
  <div class="col-xs-1"></div>
</div>