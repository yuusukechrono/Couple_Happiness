<header>ログイン</header>
<br>
<% if logged_in? %>
  <%= link_to "ログアウト", session_path(current_user.id), method: :delete,class: 'btn btn-primary' %>
  <br><br>
<% else %>
  <%= link_to "アカウント作成", new_user_path, class: 'btn btn-primary'  %>
  <br><br>
<% end %>

<% flash.each do |key,value|%>
  <%= content_tag(:div, value, class:"#{key}") %>
<% end %>

<%= form_with(scope: :session, url:sessions_path, local:true) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br><br>
  <%= f.submit "ログイン", class: 'btn btn-primary'%>
<% end %>

